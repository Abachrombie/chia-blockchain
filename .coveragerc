[run]
branch=True
relative_files=True
source=
  chia
  tests
concurrency=multiprocessing
parallel=True

[paths]
# This triggers path processing that normalizes directory separators for
# Windows data compatibility with the Linux processing job.
chia =
    chia
    */chia
tests =
    tests
    */tests

[report]
precision = 1
exclude_lines =
  pragma: no cover
  abc\.abstractmethod
  typing\.overload
  ^\s*\.\.\.\s*$
  if typing.TYPE_CHECKING:
